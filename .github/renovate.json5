{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^containers/apps/.+/metadata\\.yaml$"],
      "matchStrings": [
        "version: (?<currentValue>.*?)\\n\\s+datasource: (?<datasource>.*?)\\n\\s+depName: (?<depName>.*?)\\n\\s+versioning: (?<versioning>.*?)\\n"
      ]
    }
  ]
}
